<UserControl x:Class="PointOfSale.OrderDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" FontSize="15" HorizontalAlignment="Center">Order #</Label>
        <StackPanel Grid.Row="2">
            <Label FontSize="15" HorizontalAlignment="Center">Subtotal:</Label>
            <Label FontSize="15" HorizontalAlignment="Center">Tax:</Label>
            <Label FontSize="15" HorizontalAlignment="Center">Total:</Label>
        </StackPanel>

    </Grid>
</UserControl>
