<UserControl x:Class="PointOfSale.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BitmapImage x:Key="bleakwindlogo1" UriSource="/Images/bleakwindlogo1.jpg"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush  ImageSource="{StaticResource bleakwindlogo1}"/>
        </Grid.Background>
        
        <Button Click="StartOrderClick" Name="newOrderButton" Grid.Row="1" HorizontalAlignment="Center" Margin="10" 
                MaxHeight="100" MinWidth="400" FontSize="20" FontStyle="Oblique">
            Start New Order
        </Button>
        <!--<Button Name="prevOrderButton" Grid.Row="2" HorizontalAlignment="Center" Margin="10" 
                MaxHeight="100" MinWidth="400" FontSize="20" FontStyle="Oblique">
            View/Edit Previous Order
        </Button>-->
    </Grid>
</UserControl>
